[include]
        path = .gitconfig.user
[core]
        autocrlf = input
        editor = nvim -c \"set fenc=utf-8\"
	ignorecase = false
[color]
        ui = true
[alias]
        ad = add . -p
        st = status
        co = commit --no-verify
        ps = push --no-verify
        pl = pull
        ck = checkout
        unstg = restore --staged
[http]
        sslVerify = false
[merge]
        ff = false
[pull]
	rebase = true

[push]
	autoSetupRemote = true
